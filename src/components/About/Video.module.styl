@require '../../styles/variables/colors'
@require '../../styles/variables/breakpoints'
@require '../../styles/variables/typography'
@require '../../styles/mixins/grid'

.videoWrapper
  grid()
  margin-bottom: 3rem
  @media site-small-min
    margin-bottom: 6rem

.video
  grid-cell(12)
  @media site-medium-min
    grid-cell(10, 1)

.fitVids
  width: 100%
  height: 0
  padding-bottom: 57.25%
  position: relative
  > *
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
