@require '../../styles/variables/colors'
@require '../../styles/variables/breakpoints'
@require '../../styles/variables/typography'
@require '../../styles/mixins/grid'

.wrapper
  grid()
  align-items: flex-start
  margin-bottom: 3rem
  @media site-small-min
    margin-bottom: 5rem

.artistList
  gutterless-grid()
  list-style: none
  padding: 0
  align-items: stretch

.artist
  grid-cell(6)
  margin-bottom: 16px
  background-color: color-secondary
  background-clip: content-box
  display: flex
  align-items: center
  text-transform: uppercase
  font-weight: font-weight-heavy
  @media site-small-min
    grid-cell(3)
    margin-bottom: 24px
  @media site-medium-min
    grid-cell(2)

.noPortrait
  color: color-background
  text-align: center
  padding: 0 1rem

.currentArtist
  background-color: color-primary

.currentArtist img
  mix-blend-mode: darken
