@require '../../styles/variables/colors'
@require '../../styles/variables/breakpoints'
@require '../../styles/variables/typography'
@require '../../styles/mixins/grid'
@require '../../styles/mixins/layout'
@require '../../styles/mixins/typography'

.backgroundShapes
  display: none
  left: 0
  top: 0
  height: 100%
  @media site-small-min
    display: block
    width: 32%
  @media site-large-min
    width: calc(50% - 230px)

.wrapper
  grid()
  align-items: flex-start
  padding-top: 4rem
  margin-bottom: 3rem
  @media site-small-min
    padding-top: 7rem

.titleWrapper
  grid-cell(12)
  margin-bottom: 2rem
  @media site-small-min
    grid-cell(8, 4)

.name,
.title
  margin-bottom: 0

.portrait
  grid-cell(12)
  margin-top: 0.5rem
  margin-bottom: 2rem
  @media site-small-min
    grid-cell(4)
  @media site-medium-min
    grid-cell(3)

.portraitImage
  background: gainsboro

.bio
  grid-cell(12)
  @media site-small-min
    grid-cell(8)
  @media site-medium-min
    grid-cell(8, 1)

.bio
  hr
    max-width: 100%
    width: 5rem
    height: 0.5rem
    background: color-primary
    border: 0
    margin: 2rem 0
  hr ~ p
    font-weight: font-weight-heavy
    font-size: 18px
    line-height: 24px
  aside
    margin-bottom: 1rem
  h4 + aside
    position: relative
    margin-bottom: 0
    top: -2rem
  p + h4
    margin-top: 2rem
  blockquote
    position: relative
    margin: 0
    &:before
      content: '\2018'
      position: absolute
      top: 0
      left: -2.5rem
      line-height: 0.8
      font-size: 8rem
      color: color-primary
    p
      margin: 0
    + p
      margin-top: 0rem
      font-size: 1rem

.overlapTitle
  grid-cell(12)
  margin-top: 1rem
  font-weight: font-weight-heavy
  @media site-small-min
    grid-cell(4)
    text-align: right

.overlapArtist
  grid-cell(12)
  font-weight: font-weight-heavy
  text-transform: uppercase
  @media site-small-min
    grid-cell(8)
    margin-top: 1rem
