@require '../../../styles/variables/breakpoints'
@require '../../../styles/variables/colors'

.fixed
  position: fixed
  z-index: 2
  left: 50%
  transform: translateY(2.5vh) // default position

.title,
.underlay
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  font-size: 25vw
  line-height: 10vw
  @media site-small-min
    font-size: 15vmin
    line-height: 5vmin

.title
  margin: 0
  z-index: 40
  color: color-primary

.underlay
  width: 5em
  height: 0.35em
  z-index: -1
  background: color-background

.staticHeader:after
  content: '.' // force uncollapsed margins
  visibility: hidden
